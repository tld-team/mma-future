{
  "name": "mma-future",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "tw": "npx @tailwindcss/cli -i ./assets/src/css/input.css -o ./assets/dist/css/output.css --watch",
    "tw_build": "npx @tailwindcss/cli -i ./assets/src/css/input.css -o ./assets/dist/css/output.css --minify",
    "build": "mix",
    "prod": "mix --production",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "production": "mix --production"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "laravel-mix": "^6.0.49",
    "tailwindcss": "^4.0.0"
  }
}