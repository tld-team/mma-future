{
  "name": "mma-future",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "build": "mix --production",
    "prod": "mix --production",
    "production": "mix --production",
    "copy-fonts": "node copy-fonts.js",
    "tw": "npm run copy-fonts && npx @tailwindcss/cli -i ./assets/src/css/input.css -o ./assets/dist/css/output.css --watch",
    "tw_build": "npm run copy-fonts && npx @tailwindcss/cli -i ./assets/src/css/input.css -o ./assets/dist/css/output.css --minify"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "laravel-mix": "^6.0.49",
    "sass-loader": "^12.6.0",
    "tailwindcss": "^4.0.0"
  }
}
